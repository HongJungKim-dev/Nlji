<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_width="8.48dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21.4dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ic_back"
        />

    <TextView
        android:layout_width="114dp"
        android:layout_height="35dp"
        android:text="보상 설정"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="102.6dp"
        android:layout_marginLeft="19dp"
        android:textSize="29dp"
        android:fontFamily="@font/neo_bold"
        android:textColor="#191919"
        android:includeFontPadding="false"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="이 챌린지를 완료한다면 받고싶은 보상을 적어봐!"
        android:textColor="#191919"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="150.5dp"
        android:layout_marginLeft="19dp"
        android:textSize="14dp"
        android:fontFamily="@font/neo_regular"
        android:includeFontPadding="false"
        />
    <ImageView
        android:layout_width="183dp"
        android:layout_height="183dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="205.4dp"
        android:layout_marginLeft="88dp"
        android:background="@drawable/ic_profileicon"/>


    <Button
        android:layout_width="322dp"
        android:layout_height="46dp"
        android:text="다음"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="544dp"
        android:background="@drawable/ic_greenbutton"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/neo_medium"
        android:textSize="16dp"
        />

    <ImageView
        android:layout_width="57.38dp"
        android:layout_height="9.26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="517dp"
        android:layout_marginLeft="151dp"
        android:background="@drawable/dot2_3"
        />


    <EditText
        android:id="@+id/reward"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="84dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="410dp"
        android:hint=""
        android:textColorHint="#999999"
        android:textSize="16dp"
        android:backgroundTint="#191919"
        android:gravity="top"
        android:paddingTop="0dp"
        android:paddingLeft="0dp"
        android:focusable="false"
        />


</RelativeLayout>