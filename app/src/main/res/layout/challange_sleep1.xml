<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="11dp"
        android:layout_height="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="19dp"
        android:background="@drawable/ic_back"
        />
    <TextView
        android:layout_width="114dp"
        android:layout_height="35dp"
        android:text="목표설정"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="102.6dp"
        android:layout_marginLeft="19dp"
        android:textSize="29dp"
        android:fontFamily="@font/neo_bold"
        android:textColor="#191919"
        android:includeFontPadding="false"
        />
    <TextView
        android:layout_width="120dp"
        android:layout_height="17dp"
        android:text="몇시에 잘 예정이야?"
        android:textColor="#191919"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="150.5dp"
        android:layout_marginLeft="19dp"
        android:textSize="14dp"
        android:fontFamily="@font/neo_regular"
        android:includeFontPadding="false"
        />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/sleep_time"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:timePickerMode="spinner"
        android:theme="@style/tpc"
        />

    <ImageView
        android:layout_width="57.38dp"
        android:layout_height="9.26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="517dp"
        android:layout_marginLeft="151dp"
        android:background="@drawable/dot2_1"
        />


    <Button
        android:layout_width="322dp"
        android:layout_height="46dp"
        android:text="다음"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="544dp"
        android:background="@drawable/ic_greenbutton"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/neo_medium"
        android:textSize="16dp"
        />

</RelativeLayout>